<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:layout_margin="@dimen/spac_4_dp">


    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_start"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.1"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_end"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.9"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_middle1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.2"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_middle2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.8"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.5"/>

    <ImageView
        android:id="@+id/image_view_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_photo"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/login_email"
        android:drawableStart="@drawable/ic_emai"
        android:background="@drawable/inputs"
        android:layout_marginTop="@dimen/space_20_dp"
        app:layout_constraintTop_toBottomOf="@+id/image_view_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="@dimen/spac_8_dp"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_start"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_end"
        />

    <EditText
        android:drawableStart="@drawable/ic_password"
        android:background="@drawable/inputs"
        android:layout_marginTop="@dimen/space_20_dp"
        app:layout_constraintTop_toBottomOf="@+id/login_email"
        android:id="@+id/login_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="@dimen/spac_8_dp"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_start"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_end"
        />

    <TextView
        android:id="@+id/login_forget_password"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/spac_8_dp"
        app:layout_constraintTop_toBottomOf="@+id/login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:text="Login"
        android:layout_marginTop="@dimen/spac_8_dp"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_start"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_end"
        app:layout_constraintTop_toBottomOf="@+id/login_forget_password"
        android:onClick="OnLogin"
        />

    <TextView
        android:id="@+id/login_need_new_account"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/spac_8_dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new Account"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_middle1"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_middle2"
        android:onClick="OnMoveRegisterActivity"

       />

    <TextView
        android:id="@+id/or_login_by_phone"
        android:textStyle="bold"
        android:textColor="#44443E"
        android:layout_marginTop="@dimen/spac_8_dp"
        app:layout_constraintTop_toBottomOf="@+id/login_need_new_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or login using your"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_middle1"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_middle2"

        />

    <Button
        android:id="@+id/btn_login_by_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:text="Phone"
        android:drawableStart="@drawable/ic_phone"
        android:layout_marginTop="@dimen/spac_8_dp"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_start"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_end"
        app:layout_constraintTop_toBottomOf="@+id/or_login_by_phone"
        android:onClick="OnLoginWithPhoneNumber"
        />







</android.support.constraint.ConstraintLayout>